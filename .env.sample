# PORT: Server port number (default: 3000)
PORT=3000

# SECURED_SERVER: Enable/disable OAuth 2.0 authentication (true/false, default: true)
SECURED_SERVER=false

# LOG_LEVEL: Winston logging level (error, warn, info, verbose, debug)
LOG_LEVEL=info

# LOG_MASK_SENSITIVE: Automatically mask sensitive data in logs (true/false, default: true)
LOG_MASK_SENSITIVE=false

# CORS_ORIGIN: Allowed Cross-Origin Resource Sharing origins
# Set to specific origins in production (comma-separated): https://app1.example.com,https://app2.example.com
CORS_ORIGIN=*

# JWT_SECRET: Secret key for signing JWT tokens
JWT_SECRET=change_this_secret_key_to_a_secure_random_value

# OAUTH_AUTHORIZATION_CODE_DURATION: How long authorization codes are valid (in minutes)
OAUTH_AUTHORIZATION_CODE_DURATION=5

# OAUTH_ACCESS_TOKEN_DURATION: How long access tokens are valid (in minutes)
OAUTH_ACCESS_TOKEN_DURATION=60

# OAUTH_REFRESH_TOKEN_DURATION: How long refresh tokens are valid (in minutes)
OAUTH_REFRESH_TOKEN_DURATION=10080

# INDICATOR_PRECISION: Number of decimal places for indicator values (default: 3)
INDICATOR_PRECISION=3

# TIMEZONE: Timezone for displaying financial data timestamps (default: Europe/Paris)
# Examples: America/New_York, Asia/Tokyo, Europe/London, UTC
# Full list: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=Europe/Paris
