{
  "name": "mcp-server",
  "version": "1.0.0",
  "description": "Node.js MCP Server with HTTP Streaming Transport & OAuth",
  "type": "module",
  "main": "src/server.js",
  "imports": {
    "#utils/*": "./src/Utils/*",
    "#trading/*": "./src/Trading/*",
    "#data/*": "./src/Data/*",
    "#logger": "./src/Logger/LoggerService.js",
    "#mcp/*": "./src/Mcp/*"
  },
  "engines": {
    "node": "<=20"
  },
  "scripts": {
    "prestart": "node -e \"const v = process.version.split('.')[0].slice(1); if (v !== '20') { console.error('Error: Node.js v20.x is required, but you are running ' + process.version); process.exit(1); }\"",
    "start": "npm run prestart && node src/server.js",
    "debug": "npm run prestart && DEBUG=true node src/server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "lightweight-charts": "^5.0.9",
    "technicalindicators": "^3.1.0",
    "trading-signals": "^7.1.0",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@eslint/json": "^0.13.2",
    "eslint": "^9.39.0",
    "globals": "^16.5.0"
  }
}
